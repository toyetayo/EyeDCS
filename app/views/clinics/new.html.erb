<h1 class="text-2xl font-bold mb-4">New Clinic</h1>

<%= form_with(model: @clinic, url: clinics_path, local: true) do |form| %>
  <% if @clinic.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
      <h2 class="font-bold text-sm mb-2"><%= pluralize(@clinic.errors.count, "error") %> prohibited this clinic from being saved:</h2>
      <ul>
        <% @clinic.errors.full_messages.each do |message| %>
          <li class="text-sm"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, class: "form-input mt-1 block w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :address, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :address, class: "form-input mt-1 block w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :contact, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :contact, class: "form-input mt-1 block w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :latitude, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :latitude, class: "form-input mt-1 block w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :longitude, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :longitude, class: "form-input mt-1 block w-full" %>
  </div>

  <div class="mb-4">
    <%= form.submit "Create Clinic", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
